<Page x:Class="MallVysota.View.Pages.InformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MallVysota.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="700"
      Title="InformationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border Grid.Row="1" Grid.Column="2" 
        BorderBrush="Black" BorderThickness="5" CornerRadius="20"/>
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" Height="190" Width="300">
            <Button Background="White" BorderBrush="Transparent" Width="300" Height="190" 
                    Name="AboutAppBtn" Click="AboutAppBtn_Click">
                <StackPanel>
                    <Image Source="/Resources/Images/Figma_9ImSrg7dKG.png" Height="150"/>
                    <TextBlock Text="О приложении" TextWrapping="Wrap" FontSize="20"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Border Grid.Row="3" Grid.Column="2" 
        BorderBrush="Black" BorderThickness="5" CornerRadius="20"/>
        <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Vertical" Height="190" Width="300">
            <Button Background="White" BorderBrush="Transparent" Width="300" Height="190" 
                    Name="UserAgreementBtn" Click="UserAgreementBtn_Click">
                <StackPanel>
                    <Image Source="/Resources/Images/Figma_9ImSrg7dKG.png" Height="150"/>
                    <TextBlock Text="Пользовательское соглашение" FontSize="20"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
